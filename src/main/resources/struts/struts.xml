<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <!--常量配置：配置action访问的后缀名 默认是.action 一旦配置，请求的时候后缀名不能省略 -->
    <constant name="struts.action.extension" value="action,go"/>
    <!-- 提供详细报错页面，修改struts.xml后不需要重启服务器 -->
    <constant name="struts.devMode" value="true"/>
    <!-- 动态方法调用，禁用调用-->
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <!-- 设置项目编码 -->
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <!--服务器端的静态内存是否进行浏览器缓存 在开发模式下值设为false,产品(运行)环境下设为true-->
    <constant name="struts.serve.static.browserCache" value="false"/>
    <!-- 配置struts.multipart.saveDir -->
    <constant name="struts.multipart.saveDir" value="/tmp"/>
    <constant name="struts.custom.i18n.resources" value="myResource"/>


    <package name="default" extends="json-default,struts-default" namespace="/user">
        <action name="userAction_*" class="com.ymy.action.UserController" method="{1}">
            <result name="success" type="json">
                <param name="root">result</param>
            </result>
            <result name="inSuccess" type="dispatcher">/index.html</result>
        </action>
    </package>
</struts>